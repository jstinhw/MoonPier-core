{
  "name": "hardhat-foundry-template",
  "version": "1.0.0",
  "description": "The harmony between Foundry and Hardhat.",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "hardhat test",
    "test:forge": "forge build; forge test -vvv",
    "lint": "yarn lint:sol",
    "lint:sol": "prettier --write \"contracts/**/*.sol\"",
    "prepare": "husky install",
    "coverage": "forge coverage",
    "coverage:report": "forge coverage --report lcov",
    "address:anvil": "ts-node script/getAddressAnvil.ts",
    "address:sepolia": "ts-node script/getAddressSepolia.ts",
    "address:mumbai": "ts-node script/getAddressMumbai.ts",
    "deploy:anvil": "forge script script/moonpierAnvil.s.sol -f anvil --broadcast -vvv",
    "deploy:sepolia": "forge script script/moonpierSepolia.s.sol -f sepolia --broadcast -vvv",
    "deploy:mumbai": "forge script script/moonpierMumbai.s.sol -f mumbai --broadcast -vvv",
    "deploy:polygon": "forge script script/moonpierPolygon.s.sol -f polygon --broadcast -vvv"
  },
  "author": "MoonPier",
  "license": "Apache-2.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.35",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.6.6",
    "hardhat": "^2.9.5",
    "hardhat-preprocessor": "^0.1.4",
    "prettier": "^2.8.4",
    "prettier-config-solidity": "^1.9.1",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4",
    "husky": "^8.0.0"
  }
}
